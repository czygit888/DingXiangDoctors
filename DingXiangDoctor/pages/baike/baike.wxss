.back{
    border:2rpx solid rgba(0,0,0,0.2);
    box-sizing: border-box;
    padding: 6rpx 10rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-radius: 50rpx;
    position: absolute;
}
.back image{
    width: 55rpx;
    height:55rpx;
    vertical-align: middle;
}
.back-con{
    position: fixed;
    z-index: 100;
    top:0;
    left:0;
    background-color: #fff;
}
.back-con>view:last-child{
    position: absolute;
}
.bg{
    width: 100%;
    height:500rpx;
}
.bg image{
    width: 100%;
    height:100%;
}
.sousuokuang{
    width:576rpx;
    height:160rpx;
    background-color: #fff;
    display: flex;
    position: absolute;
    justify-content: space-around;
    align-items: center;
    top:400rpx;left:calc(50% - 288rpx);
    padding:0 20prx;
    box-sizing: border-box;
    box-shadow:0px 2rpx 4rpx 1rpx rgba(0,0,0,.1);
    border-radius:20rpx;
    font-size:28rpx;
}
.input text{
    font-weight: bold;
}
.input image{
    width:50rpx;height: 50rpx;
    margin-right:10rpx;
    vertical-align: middle;
}
.input{
    width: 75%;
    background:#F6F6F6;
    border-radius: 20rpx;
    padding:20rpx;
    box-sizing: border-box;
}
.search{
    background-color: #8a76fc;
    color: #fff;
    box-sizing: border-box;
    padding: 20rpx;
    border-radius: 20rpx;
    font-size: 28rpx;
    margin-top: -2rpx;
}
.container{
    box-sizing: border-box;
    padding:20rpx;
    margin-top: 80rpx;
    background-color: #F6F6F6;
}
.title{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.header>view:first-child{
    margin-top: 40rpx;
    font-size: 36rpx;
    font-weight: bold;
}
.header>view:last-child{
    font-size: 20rpx; color:#888;
    margin-top:10rpx ;
}
.jibing-con{
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}
.jibing-con>view{
    margin-top:20rpx;
    width:23%;
    background: #fff;
    box-sizing: border-box;
    padding:30rpx;
    border-radius: 8rpx;
    text-align: center;
}
.yao-con{
    margin-top:20rpx;
    background-color: #fff;
    font-size:28rpx;
    font-weight: bold;
    border-radius: 20rpx;
}
.yao-con>view{
    border-bottom:2rpx solid #F6F6F6;
    display: flex;
    justify-content: space-around;
    align-items: center;
    box-sizing: border-box;
    padding:30rpx;
}
.yao-con>view>view{
    width:40%;
    display: flex;
    justify-content: space-between;
}
.more-con{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.more-con>view{
    margin-top: 30rpx;
    width:48%;
    background-color: #ffff;
    display: flex;
    justify-content: space-around;
    box-sizing: border-box;
    padding: 20rpx 20rpx 20rpx 40rpx;
    border-radius: 20rpx;
}
