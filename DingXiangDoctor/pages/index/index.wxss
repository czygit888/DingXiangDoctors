/**index.wxss**/
.nav{
  display: flex;
  justify-content: space-between;
  position: relative;
}

.nav-xi{
  width:100%;
  height:160rpx;
  background-color: #fff;
}
.nav-xi.fixed{
  width: 100%;
  position:sticky;
  top:0;
  left:0;
  z-index: 100;
  text-align: center;
  line-height: 180rpx;
}
.nav{
  margin: 0 20rpx;
}
.nav image:first-child.icon{
  width:70rpx;
  height:70rpx;
}
.nav image:last-child.icon{
  width:55rpx;
  height:55rpx;
}
.nav-icon{
  width:18%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
}
.nav-title{
  font-size: 40rpx;
  font-weight: bolder;
}
.nav-desc{
  font-size: 20rpx;
  color:#888
}
.gundong{
  display: flex;
  border:3rpx solid #000;
  border-radius: 80rpx;
  box-sizing: border-box;
  margin: 20rpx 20rpx;
  padding:15rpx;
  height:85rpx;
  margin-top:30rpx;
  justify-content: space-between;
  align-items: center;
}
.swiper_container{
  width: 100%;
  height:50rpx;
  font-size: 28rpx;
  margin-left:15rpx;
}
.nav2{
  display:flex;
  justify-content: space-between;
  margin-top: 30rpx;
  margin: 20rpx 20rpx;
}
.nav2>view{
  padding:2rpx 30rpx;
  box-sizing: border-box;
  text-align: center;
  position: relative;
}
.nav2>view+view::after{
  content:'';
  border-left:3rpx solid #ddd;
  height:84rpx;
  position: absolute;
  top:37rpx;
  left:-37rpx;
}
.nav3{
  margin:20rpx 0;
  display: flex;
  justify-content: space-between;
  margin: 20rpx 20rpx;
}
.nav3>view{
  text-align: center;
  box-sizing: border-box;
  padding:20rpx 0;
}
.nav-bar{
  display:flex;
  width: 30%;
  justify-content: space-between;
  height:80rpx;
  box-sizing: border-box;
  padding:0 20rpx;
}
.nav-bar>view{
  color:#888;
  font-size: 32rpx;
  position: relative;
  line-height: 48rpx;
}
.nav-bar>view.selected{
  color:#000;
  font-size: 36rpx;
}
.nav-bar>view.selected::after{
  content:'';
  border-bottom:4rpx solid #8a76fc;
  display: block;
  position: absolute;
  width:20rpx;
  height:16rpx;
  bottom:0rpx;
  left:24rpx;
}
.fixed{
  position: sticky;
  top:102rpx;
  left:0;
  z-index: 100;
}
.swiper{
  width:100%;
  
}