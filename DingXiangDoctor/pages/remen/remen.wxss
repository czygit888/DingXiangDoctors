.bg{
    width:100%;
    height:500rpx;
    position: fixed;
    top:0;left:0;
    z-index:-1
}
.back-con{
    position: fixed;
    z-index: 1000;
    top:0;
    left:0;
}
.back image{
    width:60rpx;height:60rpx
}
.back-con>view:nth-child(2){
    position: absolute;
}
.nav-bg{
    width:100%;
    position: fixed;top:0;left:0;
    z-index: 10;
    overflow: hidden;
}
.nav-bg>image{
    width:100%;
    height:500rpx;
}
.content{
    margin-top: 350rpx;
    background-color: #fff;
    border-top-left-radius: 40rpx;
    border-top-right-radius: 40rpx;
    box-sizing: border-box;
    padding: 40rpx 20rpx;
}
.item{
    display: flex;
    justify-content: space-between;
    border-bottom: 2rpx solid #e8e8e8;
}
.item>view:first-child{
    width:10%;
}
.item>view:first-child>image{
    width:50rpx;
    height:50rpx ;
}
.item>view:first-child>view{
    margin-top: 4rpx;
    width:45rpx;
    height:45rpx ;
    box-sizing: border-box;
    padding: 4rpx;
    border-radius: 50%;
    text-align: center;
    background-color: #e9e6fc;color:#8a76fc;font-size: 26rpx;
}
.item>view:nth-child(2){
    width:82%;
    display: flex;
    flex-direction: column;
    height:150rpx;
    justify-content: space-around;
}
.item>view:nth-child(3){
    width:5%
}
.item>view:nth-child(3)>image{
    width: 20rpx;
    height: 20rpx;
}