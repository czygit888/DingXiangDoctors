/* pages/find/find.wxss */
.container{
    margin-top:40rpx;
    box-sizing: border-box;
    padding:0 20rpx;
    padding-bottom: 10rpx;
    background: linear-gradient(to bottom,#fff ,#fff,#fff,#fff,#fff,#fff,#fff,#fff,#fff, #F6F6F6 );
}
.header{
    text-align: center;
    line-height: 180rpx;
    width:100%;
  height:160rpx;
  background-color: #fff;
  position: fixed;
  top:0;left:0
}
.gundong{
    margin-top: 160rpx;
    display: flex;
    border:2rpx solid #ddd;
    border-radius: 80rpx;
    box-sizing: border-box;
    padding:15rpx;
    height:75rpx;
    justify-content: space-between;
    align-items: center;
  }
  .swiper_container{
    width: 100%;
    height:50rpx;
    font-size: 28rpx;
    margin-left:15rpx;
  }
  .care{
      margin-top: 20rpx;
  }
  .full-btn {
    margin-top: 20rpx;
    background-color: #8a76fc;
    display: inline-block;
    color: #fff;
    padding: 0 20rpx;
    box-sizing: border-box;
    border-radius: 30rpx;
    font-size: 24rpx;
    line-height: 48rpx;
}
.care>view:last-child{
    display: flex;
    justify-content: space-between;
    margin-top: 30rpx;
    box-sizing: border-box;
    padding:0 20rpx;
}
.find{
    background-color: #F6F6F6;
    width: 100%;
    box-sizing: border-box;
    padding:20rpx;
}
.find>view{
    border-radius: 20rpx;
}

.title{
    background-image: radial-gradient(circle at 50% 500rpx,#aaa,rgb(252, 130, 151));
    position: relative;
    width:100%;
    box-sizing: border-box;
    padding:20rpx;
    display: flex;
    justify-content: space-between;
    border-radius: 24rpx;
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;
    color:#fff
}
.filter{
    /* background: url(http://iconfont.alicdn.com/t/fd04b6d2-c1c5-402b-a0e2-a01af13982f4.png) no-repeat; */
    position: absolute;
    width:100%;
    height:200rpx;
    filter:blur(0.5rem);
    z-index: -1;
    background-size: cover;
    top:0;left:0;
    overflow: hidden;
}
.bg-blur{
 width:200%;
 height:200%;
 background-color:red;
}
.free-btn {
    margin-top: 20rpx;
    background-color: transparent;
    display: inline-block;
    color: #fff;
    padding: 0 20rpx;
    box-sizing: border-box;
    border-radius: 30rpx;
    font-size: 24rpx;
    font-weight: bold;
    line-height: 48rpx;
    height:52rpx;
    border:2rpx solid #fff;
}
.content{
    background-color: #fff;
    box-sizing: border-box;
    padding:30rpx 20rpx;
}
.con-con{
    display: flex;
    justify-content: space-between;
    margin-top: 30rpx;
}
.con-con>view:first-child{
    width:70%;
    font-size: 32rpx;
}
.con-con>view:last-child{
    width:25%;
    height: 120rpx;
    border:2rpx solid #F6F6F6;
    border-radius: 10rpx;
}
.con-con>view:last-child>image{
    width:100%;
    height: 100%;
}